{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ],
    "jsRules": {},
    "rules": {
        "import-name": false,
        "interface-name": false,
        "semicolon": [
            true,
            "always",
            "ignore-bound-class-methods"
        ],
        "variable-name": false
    }
}
